<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if @user.posts.count == 0 %>
  <h2>Posts</h2>
  <p>Sorry, <%= @user.name %> has not submitted any posts yet.</p>
<% else %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% end %>

<% if @user.comments.count == 0 %>
  <h2>Comments</h2>
  <p>Sorry, <%= @user.name %> has not submitted any comments yet.</p>
<% else %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% end %>

<% if @favorite_posts.count == 0 %>
  <h2>Favorite Posts</h2>
  <p>Sorry, <%= @user.name %> has not favorited any posts yet.</p>
<% else %>
  <h2>Favorite Posts</h2>
  <%= @favorite_posts.each do %>

  <%# avatar_url = post_author_avatar(48) %>
    <%# if avatar_url %>
      <div class="media-left">
        <%#= image_tag avatar_url, class: 'media-object' %>
      </div>
    <%# end %>

    <%= render @favorite_posts %>
    <p><%= render @favorite_posts.comments.count %> Comments</p>
    <p><%= render @favorite_posts.votes.count %> Votes</p>
  <% end %>
<% end %>
